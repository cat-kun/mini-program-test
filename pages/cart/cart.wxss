/* pages/cart/cart.wxss */
page{
  height: 100%;
}
.cart{
  background: #ccc;
  padding: 20rpx 10rpx;
}
.cart-container{
  border-radius: 16rpx;
  background: #fff;
  overflow: hidden;
  padding-bottom: 100rpx;
}
.cart-wrap{
  display: flex;
  background: #fff;
  /* transition: all 0.4s; */
  /* transform: translateX(60rpx); */
}
.cart-cont{
  width: 100%;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  transition: all 0.4s;
  transform: translateX(180rpx);
  margin-left: -180rpx;
}
.del{
  width: 180rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f00;
  color: #fff;
  text-align: center;
  transform: translateX(180rpx);
  transition: all 0.4s;
}
.touch-move-active .cart-cont,
.touch-move-active .del {
  transform: translateX(0);
}
.column{
  flex: 1;
  margin-right: 20rpx;
}
.item-select{
  width: 20rpx;
  height: 20rpx;
}
.item-image{
  width: 150rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.item-title{
  font-size: 30rpx;
  line-height: 30rpx;
  display: block;
  color: #ccc;
}
.item-desc{
  display: block;
  font-size: 20rpx;
  color: #ccc;
  margin-top: 10rpx;
}

.row{
  display: flex;
  justify-content: space-between;
}
.price-wrap{
  font-size: 20rpx;
}
.price{
  font-size: 30rpx;
  margin-left: -6rpx;
}

.edit-quantity{
  display: flex;
}
.edit-quantity .disabled{
  color: #ccc;
}
.btn{
  width: 30rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border: 1px solid #ccc;
}
.number{
  width: 120rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  height: 100rpx;
  background: #fff;
  justify-content: space-between;
  padding-left: 20rpx;
}
.select-all{
  padding-top: 30rpx;
}
.select-all-text{
  margin-left: 10rpx;
  font-size: 32rpx;
  vertical-align: middle;
  position: relative;
  top: -6rpx;
}
.btn-wrap{
  width: 250rpx;
  height: 100rpx;
  background: #f40 !important;
  color: #fff !important;
  text-align: center;
  line-height: 100rpx;
  border-radius: 0;
}
.btn-container{
  display: flex;
}
.price-container{
  flex: 1;
  margin-right: 20rpx;
  margin-top: 16rpx;
  text-align: right;
}
.total-price,
.total-wrap{
  font-size: 26rpx;
}
.total-wrap{
  color: #999;
}
.all-price{
  margin-right: 20rpx;
}

.checkbox{
  width: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
